<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
    <% if (user) { %>
      <form class="form-inline" action="/logout" method="POST" style="justify-content:right">
        <label for="logout" style="margin: 1em">Logged in as: <%= user.email %>!</label>
        <button type="submit" class="btn btn-outline-dark">Logout</button>
      </form>
      <% } else { %>
        <form class="form-inline" action="/login" method="GET" style="justify-content:right">
          <button type="submit" class="btn btn-light" style="margin: 5px">Login</button>
        </form>
        <form class="form-inline" action="/register" method="GET" style="justify-content:right">
          <button type="submit" class="btn btn-light" style="margin: 5px">Register</button>
        </form>
    <% } %>
  </nav>
</header>